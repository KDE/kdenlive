<?xml version="1.0"?>
<!DOCTYPE kpartgui>
<effect xmlns="https://www.kdenlive.org" tag="frei0r.glitch0r" id="frei0r.glitch0r" type="video">
    <name>Glitching (rows and color)</name>
    <description>Adds color glitches and block shifting</description>
    <author>IDENT Software</author>
    <parameter type="animated" name="0" max="100" min="0" default="0" factor="100" suffix="%">
        <name>Glitch Frequency</name>
    </parameter>
    <parameter type="animated" name="1" max="%height" min="0" default="0.1" factor="%height" suffix="px">
        <name>Block Height</name>
    </parameter>
    <parameter type="animated" name="2" max="%width" min="0" default="0.5" factor="%width">
        <name>Shift Intensity</name>
    </parameter>
    <parameter type="animated" name="3" max="5" min="0" default="0" factor="5">
        <name>Color Glitching Intensity</name>
    </parameter>
</effect>
