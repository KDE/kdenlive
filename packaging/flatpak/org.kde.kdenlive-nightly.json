          "x-checker-data": {
              "type": "json",
              "url": "https://api.github.com/repos/rttrorg/rttr/releases/latest",
              "version-query": ".tag_name | sub(\"^v\"; \"\")",
              "url-query": ".assets[] | select(.name==\"rttr-\" + $version + \"-src.tar.gz\") | .browser_download_url"
